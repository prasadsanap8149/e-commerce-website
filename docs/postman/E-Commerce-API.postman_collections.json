{
  "info": {
    "_postman_id": "e-commerce-api-collection",
    "name": "E-Commerce Platform API",
    "description": "Complete API collection for E-Commerce Platform\n\n## Overview\nThis collection contains all API endpoints for the E-Commerce Platform including Products, Enquiries, and Configuration endpoints.\n\n## Base URL\n- Development: `http://localhost:8080/api`\n- Production: `https://your-domain.com/api`\n\n## Authentication\nAuthentication is toggle-based. When enabled, include JWT token in Authorization header.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "enquiryId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Products",
      "description": "Product management endpoints",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            },
            "description": "Retrieves all active products from the catalog."
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}"]
            },
            "description": "Retrieves a specific product by its ID."
          },
          "response": []
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/search?q=laptop",
              "host": ["{{baseUrl}}"],
              "path": ["products", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop",
                  "description": "Search query"
                }
              ]
            },
            "description": "Search products by name or description."
          },
          "response": []
        },
        {
          "name": "Get Products by Category",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/category/{{categoryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["products", "category", "{{categoryId}}"]
            },
            "description": "Retrieves all products in a specific category."
          },
          "response": []
        },
        {
          "name": "Get Products by Price Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/price-range?minPrice=10&maxPrice=500",
              "host": ["{{baseUrl}}"],
              "path": ["products", "price-range"],
              "query": [
                {
                  "key": "minPrice",
                  "value": "10",
                  "description": "Minimum price"
                },
                {
                  "key": "maxPrice",
                  "value": "500",
                  "description": "Maximum price"
                }
              ]
            },
            "description": "Retrieves products within a specified price range."
          },
          "response": []
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Product\",\n  \"description\": \"This is a new product description\",\n  \"price\": 99.99,\n  \"categoryId\": 1,\n  \"image\": \"https://example.com/product.jpg\",\n  \"stock\": 100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            },
            "description": "Creates a new product in the catalog."
          },
          "response": []
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"description\": \"Updated product description\",\n  \"price\": 149.99,\n  \"categoryId\": 1,\n  \"image\": \"https://example.com/updated-product.jpg\",\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}"]
            },
            "description": "Updates an existing product."
          },
          "response": []
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["products", "{{productId}}"]
            },
            "description": "Soft deletes a product (sets active to false)."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Enquiries",
      "description": "Enquiry management endpoints",
      "item": [
        {
          "name": "Create Enquiry",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1-555-0123\",\n  \"message\": \"I have a question about the Laptop Pro product. Is it available in silver color?\",\n  \"productId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/enquiries",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries"]
            },
            "description": "Submits a new customer enquiry."
          },
          "response": []
        },
        {
          "name": "Get All Enquiries",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries?page=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (starts from 1)"
                },
                {
                  "key": "size",
                  "value": "10",
                  "description": "Number of items per page"
                }
              ]
            },
            "description": "Retrieves all enquiries with pagination."
          },
          "response": []
        },
        {
          "name": "Get Enquiry by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/{{enquiryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "{{enquiryId}}"]
            },
            "description": "Retrieves a specific enquiry by ID."
          },
          "response": []
        },
        {
          "name": "Get Enquiries by Status (PENDING)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/status/PENDING?page=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "status", "PENDING"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            },
            "description": "Retrieves enquiries with PENDING status."
          },
          "response": []
        },
        {
          "name": "Get Enquiries by Status (REVIEWED)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/status/REVIEWED?page=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "status", "REVIEWED"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            },
            "description": "Retrieves enquiries with REVIEWED status."
          },
          "response": []
        },
        {
          "name": "Get Enquiries by Status (RESOLVED)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/status/RESOLVED?page=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "status", "RESOLVED"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            },
            "description": "Retrieves enquiries with RESOLVED status."
          },
          "response": []
        },
        {
          "name": "Update Enquiry Status to REVIEWED",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/{{enquiryId}}/status?status=REVIEWED",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "{{enquiryId}}", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "REVIEWED",
                  "description": "New status: PENDING, REVIEWED, or RESOLVED"
                }
              ]
            },
            "description": "Updates the status of an enquiry to REVIEWED."
          },
          "response": []
        },
        {
          "name": "Update Enquiry Status to RESOLVED",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/{{enquiryId}}/status?status=RESOLVED",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "{{enquiryId}}", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "RESOLVED",
                  "description": "New status: PENDING, REVIEWED, or RESOLVED"
                }
              ]
            },
            "description": "Updates the status of an enquiry to RESOLVED."
          },
          "response": []
        },
        {
          "name": "Delete Enquiry",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/enquiries/{{enquiryId}}",
              "host": ["{{baseUrl}}"],
              "path": ["enquiries", "{{enquiryId}}"]
            },
            "description": "Permanently deletes an enquiry."
          },
          "response": []
        }
      ]
    },
